<div class = 'row'>
  <div class ='col-xs-10 col-md-8 col-lg-12'>

<%= form_tag create_customer_path, method: :post, :class => "form-horizontal", :role => 'form' do %>
 
  <div class="form-group">
    <%= label_tag :first_name, nil, class: "col-sm-2  control-label" %>
    <div class="col-sm-6 col-md-12 col-lg-6">
      <%= text_field_tag :first_name, nil, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :last_name, nil, class: "col-sm-2  control-label" %>
    <div class="col-sm-6 col-md-12 col-lg-6 ">
      <%=  text_field_tag :last_name, nil, class: "col-sm-2 form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= label_tag :email_address, nil, class: "col-sm-2  control-label" %>
    <div class="col-sm-6 col-md-12 col-lg-6">
      <%=  text_field_tag :email_address, nil, class: "col-sm-2 form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= label_tag :address, nil, class: "col-sm-2  control-label" %>
    <div class="col-sm-6 col-md-12 col-lg-6">
      <%=  text_field_tag :address, nil, class: "col-sm-2 form-control" %>
    </div>
  </div>
     <div class="form-group">
    <%= label_tag :city, nil, class: "col-sm-2  control-label" %>
    <div class="col-sm-6 col-md-12 col-lg-6 ">
      <%=  text_field_tag :city, nil, class: "col-sm-2 form-control" %>
    </div>
  </div>
     <div class="form-group">
    <%= label_tag :province_id, nil, class: "col-sm-2  control-label" %>
    <div class="col-sm-6 col-md-12 col-lg-6">     
     <%= select_tag :province_id, options_from_collection_for_select(@provinces, 'id', 'name') , class: "col-sm-2 form-control"%>

    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-10">
      <%= submit_tag 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>

  </div>
</div>
